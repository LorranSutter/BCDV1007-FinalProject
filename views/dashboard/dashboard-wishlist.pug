div(class="wishlist")
    h3 Wishlist
    input(type="search" name="wishlist-search" id="wishlist-search" placeholder="Search")
    div(class="table-wishlist-content")
        table(class="table-wishlist")
            thead
                tr
                    th(id="col-item") Item
                    th(id="col-remove") Remove
            tbody
                each elem in wishlist
                    tr(id=`wishlist-${elem._id.toString()}`)
                        td= elem.name
                        td 
                            img(id=`remove-wishlist-button-${elem._id.toString()}` src="img/remove_logo.png" alt="remove_logo")